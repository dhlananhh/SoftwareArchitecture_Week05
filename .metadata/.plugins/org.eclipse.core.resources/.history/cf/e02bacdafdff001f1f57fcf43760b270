package iuh.fit.se.library;


public class BookFactory {
    public static Book createBook(String type, String title, String author, Object... details) {
        if ("Sách giấy".equalsIgnoreCase(type)) {
            return new PaperBook(title, author, (String) details[1], (Integer) details[0]); 
            // detail[0] = pageCount, detail[1] = genre, swapped due to original ordering
        } else if ("Sách điện tử".equalsIgnoreCase(type)) {
            return new EBook(title, author, (String) details[1], (String) details[0]); 
            // detail[0] = fileFormat, detail[1] = genre, swapped due to original ordering
        } else if ("Sách nói".equalsIgnoreCase(type)) {
            return new AudioBook(title, author, (String) details[1], (Double) details[0]); 
            // detail[0] = durationHours, detail[1] = genre, swapped due to original ordering
        }
        return null; 
        // Loại sách không hợp lệ
    }
}