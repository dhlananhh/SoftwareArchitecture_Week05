package iuh.fit.se.library;

public abstract class Book {
    private String title;
    private String author;
    private String genre; // Thêm thuộc tính thể loại sách
    private boolean isBorrowed; // Thêm thuộc tính tình trạng mượn trả

    public Book(String title, String author, String genre) {
        this.title = title;
        this.author = author;
        this.genre = genre;
        this.isBorrowed = false; 
        // Mặc định sách mới thêm vào là chưa được mượn
    }

    public String getTitle() {
        return title;
    }

    public String getAuthor() {
        return author;
    }

    public String getGenre() { return genre; } 
    // Getter cho thuộc tính thể loại

    public boolean isBorrowed() { return isBorrowed; } 
    // Getter cho tình trạng mượn trả

    public void setBorrowed (boolean borrowed) { 
    	this.isBorrowed = borrowed; 
	} 

    public abstract String getBookType(); 
    // Abstract Method - Factory Method

    public void displayBookInfo() {
        System.out.println(
        		"Tiêu đề: " + title + "\nTác giả: " + author + "\nThể loại: " + genre + 
        		"\nLoại sách: " + getBookType() + "\nTình trạng: " + (isBorrowed ? "Đang mượn" : "Có sẵn")
		);
    }
}
